{% extends '@EasyAdmin/layout.html.twig' %}

{% block page_title %}
    Kasse | Verwaltung
{% endblock %}

{% block head_favicon %}
    <link rel="icon" type="image/svg+xml" href="{{ asset('favicon.svg') }}">
{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block main %}
    <div class="card mb-5">
        <div class="card-header bg-dark text-white">
            <h4 class="card-title">Zur Kassenansicht wechseln</h4>
        </div>
        {% for event in events %}
            <a class="card-body" href="{{ path('start_cash_register', {eventId: event.id}) }}">
                <span class="fa-solid fa-cash-register me-4"></span>
                <span>{{ event.name }}</span>
            </a>
        {% else %}
            <div class="card-body">Noch keine Events angelegt</div>
        {% endfor %}
    </div>
{% endblock main %}
